          <p class="project-title"><%= t('portfolio.item2.title') %></p><!--Project Title -->
          <p><%= t('portfolio.item2.short_description') %></p><!--Project Subtitle -->
        </div>

        <!--==== Project Preview HTML ====-->

        <div class="sr-only project-description" data-project-description="<p><%= t('portfolio.item2.description') %></p><p class='text-center'><a class='btn btn-quattro' target='_blank' href='http://multilisting.su' rel='nofollow'></i><%= t('portfolio.visit') %></a></p>" data-images="<%= image_path 'porfolio/item2/slide1.png' %>,<%= image_path 'porfolio/item2/slide2.png' %>,<%= image_path 'porfolio/item2/slide3.png' %>" >
        </div>

      </article><!--End Project Item -->

      <article class="project-item _simple">

        <img class="img-responsive project-image" src="<%= image_path 'porfolio/item3/thumb1.png' %>" alt="<%= t('portfolio.item3.alt') %>"><!--Project thumb -->

